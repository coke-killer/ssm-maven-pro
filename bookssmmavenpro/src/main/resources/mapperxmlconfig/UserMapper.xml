<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.colin.mapper.UserMapper">
  <insert id="insertUser">
    insert into message_user(name, password) values(#{name}, #{password})
  </insert>
  <select id="selectUserByUser" resultType="com.colin.bean.User">
    select id, name, password from message_user where name = #{name} and password = #{password}
  </select>
</mapper>